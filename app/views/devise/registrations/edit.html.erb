<div class="col-md-1"></div>
<div class="col-md-10">
  <div class="panel panel-headline">
    <div class="panel-heading">
      <h3 class="panel-title text-center">Thông tin người dùng</h3>
      <p class="panel-subtitle text-center">Cập nhập thông tin để hệ thống hỗ trợ bạn được tốt hơn</p>
    </div>
    <div class="panel-body">
      <div class="custom-tabs-line tabs-line-bottom left-aligned">
				<ul class="nav" role="tablist">
					<li class="active"><a href="#tab-bottom-left1" role="tab" data-toggle="tab">Tài khoản</a></li>
					<li><a href="#tab-bottom-left2" role="tab" data-toggle="tab">Cá nhân</a></li>
				</ul>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="tab-content">
          <div class="tab-pane fade in active" id="tab-bottom-left1">
            <%= render "devise/shared/error_messages", resource: resource, class: "form-horizontal" %>

            <div class="form-group">
              <br>
              <%= f.label :email, class: "control-label col-sm-4" %>
              <div class="col-sm-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control " %>   
              </div>
              <br>
            </div>

            <div class="form-group">
              <br>
              <%= f.label :name, class: "control-label col-sm-4" %>
              <div class="col-sm-8">
                <%= f.text_field :name, autofocus: true, class:"form-control " %>   
              </div>
              <br>
            </div>

            <div class="form-group">
              <br>
              <%= f.label :avatar, class: "control-label col-sm-4" %> 
              <div class="col-md-8">
                <%= f.file_field :avatar %>
              </div>  
              <br>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="form-group">
              <br>
              <%= f.label :password, class: "control-label col-sm-4" %> 
              <div class="col-sm-8">
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Mật khẩu" %>
              </div>  
              <br>
            </div>

            <div class="form-group">
              <br>
              <%= f.label :password_confirmation, class: "control-label col-sm-4" %>
              <div class="col-md-8">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Xác nhận mật khẩu" %>
              </div>
              <br>
            </div>
            <div class="form-group">
              <br>
              <%= f.label :current_password, class: "control-label col-sm-4" %> 
              <div class="col-md-8">
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Mật khẩu hiện tại" %>
              </div>  
              <br>
            </div>
          </div>
          <div class="tab-pane fade" id="tab-bottom-left2">
            <div class="form-group">
              <br>
              <%= f.label :gender, class: "control-label col-sm-3" %>
              <div class="col-sm-3">
                <%= f.select :gender, {"Male": 1, "Female": 2}, { include_blank: true }, class: "form-control" %>
              </div>
              <%= f.label :birth_day, class: "control-label col-sm-3" %>
              <div class="col-sm-3">
                  <%= f.select :birth_day, (1990..2019), { include_blank: true }, class: "form-control" %>
                </div>
              <br>
            </div>
            <div class="form-group">
              <br>
              <%= f.label :status, class: "control-label col-sm-3" %> 
              <div class="col-md-9">
                <%= select_tag :status, options_for_select(load_status_user), class: "form-control" %>
              </div>  
              <br>
            </div>
            <div class="form-group">
              <br>
              <%= f.label :main_major, class: "control-label col-md-3 col-sm-3" %> 
              <div class="col-md-9 col-sm-9">
                <%= f.select :main_major, load_major.collect {|key, value| [value, value]}, {}, {multiple: true, class: "form-control height-200"} %>
              </div>
              <br>
            </div>
          </div>
        </div>
        <div class="form-group">
          <br>
          <%= f.submit "Update", class: "btn btn-primary" %>
          <br>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-1"></div>

