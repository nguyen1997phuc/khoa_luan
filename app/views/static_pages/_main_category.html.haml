.col-md-4
  .panel
    %div{:class => "panel-body no-padding #{category.background}-gradient color-white text-center text-uppercase"}
      .padding-top-30.padding-bottom-30
        %h2.panel-title.fw-bold
          = category.name
    .panel-body
      .height-50
        = render partial: 'sub_category', collection: load_sub_category(category.id), as: :sub_category
      %h4.text-info
        = fa_icon "book"
        Tài liệu nổi bật
      = render partial: 'category', collection: load_sub_category(category.id), as: :category
